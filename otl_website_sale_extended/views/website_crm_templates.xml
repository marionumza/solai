<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="contactus_form_inherited" name="Contact Form" inherit_id="website_form.contactus_form" customize_show="True">
        <xpath expr="//form//div[7]" position="after">
            <div class="form-group row form-field d-none">
                <div class="col-lg-3 col-md-4">
                    <label class="col-form-label" for="email_to">Email To</label>
                </div>
                <div class="col-lg-7 col-md-8">
                    <input type="hidden" class="form-control o_website_form_input" name="email_to" t-att-value="res_company.email"/>
                </div>
            </div>
            <div class="form-group row form-field">
                <label class="col-lg-3 col-md-4 col-form-label">Upload Files</label>
                
            </div>

            <div class="form-group row form-field">
                <div class="col-lg-10 col-md-10">
                    <div style="width:100%!important;padding: 50px 0px!important;" class="dropzone" id="dropzone-contactus">
                        <div class="dz-message" style="text-align:center;">
                            <span class="title_p">
                                Drag and drop or Upload files here.
                            </span>
                        </div>
                        <input type="file" name="file" id="uploadfile" />
                        <input type="hidden" name="send_mail_from_contactus" t-att-value="1" id="send_mail_from_contactus" />
                        <!--input type="hidden" name="contactus_token" t-att-value="contactus_token" id="contactus_token" /-->
                    </div>
                </div>
                <div id="contactus_file_count_validation" class="row d-none" style="color:red;padding: 15px 30px;">
                    <p>
                        You can upload only 5 images.
                    </p>
                </div>
                <div id="contactus_wrong_files" class="row d-none" style="color:red;padding: 15px 30px;">
                    <p>
                        You can't upload files of this type.
                    </p>
                </div>
            </div>
		</xpath>
	</template>
</odoo>