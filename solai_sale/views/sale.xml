<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_view_form_solai_inherit" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="payment_term_id" position="after">
                <field name="installer_id" domain="[('installer', '=', True)]"/>
            </field>
        </field>
    </record>

    <record id="res_users_view_inherit_installer" model="ir.ui.view">
        <field name="name">res.users.form.installer</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='notification_type']" position="before">
                    <field name="installer"/>
                </xpath>
            </data>
        </field>
    </record>
</odoo>
