<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <template name="Contact us 12" id="contact_us_12">
        <section class="pt64 pb64" data-visible="contactus">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-6 pb16">
                        <h1 class="o_default_snippet_text mb16">GET IN TOUCH</h1>
                        <p class="o_default_snippet_text mb32">
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut
                            labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco
                            laboris nisi ut aliquip ex ea commodo consequat.
                        </p>
                        <div class="row">
                            <div class="col-12 col-sm-12 col-md-6 col-lg-6  media mb16">
                                <i class="fa fa-2x mr-3 mt-2 pe-7s-map-marker fa-500px" data-original-title="" title=""
                                   aria-describedby="tooltip360075" style=""/>
                                <div class="media-body">
                                    <h5 class="pt8 font-weight-bold o_default_snippet_text">OUR ADDRESS</h5>
                                    <span class="o_default_snippet_text">1725 Slough Ave.</span>
                                    <span class="o_default_snippet_text">Scranton</span>
                                    <span class="o_default_snippet_text">Pennsylvania</span>
                                    <span class="o_default_snippet_text">18540</span>
                                    <span class="o_default_snippet_text">United States</span>
                                </div>
                            </div>
                            <div class="col-12 col-sm-12 col-md-6 col-lg-6  media mb16">
                                <i class="fa fa-2x mr-3 mt-2 pe-7s-mail fa-500px" style=""/>
                                <div class="media-body">
                                    <h5 class="pt8 font-weight-bold o_default_snippet_text">EMAIL ADDRESS</h5>
                                    <p class="o_default_snippet_text">info@yourcompany.example.com</p>
                                </div>
                            </div>
                            <div class="col-12 col-sm-12 col-md-6 col-lg-6  media mb16">
                                <i class="fa fa-2x mr-3 mt-2 pe-7s-call fa-500px" style=""/>
                                <div class="media-body">
                                    <h5 class="pt8 font-weight-bold o_default_snippet_text">PHONE NUMBER</h5>
                                    <p class="o_default_snippet_text">+1 555 123 8069</p>
                                </div>
                            </div>
                            <div class="col-12 col-sm-12 col-md-6 col-lg-6  media mb16">
                                <i class="fa fa-2x fa-cog mr-3 mt-2 pe-7s-config fa-500px" data-original-title=""
                                   title="" aria-describedby="tooltip966821" style=""/>
                                <div class="media-body">
                                    <h5 class="pt8 font-weight-bold o_default_snippet_text">WORKING HOURS</h5>
                                    <p class="o_default_snippet_text">Mon to Fri: 9am to 8pm</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-12 col-md-12 col-lg-6">
                        <h1 class="o_default_snippet_text mb16">DROP US A LINE</h1>
                        <form action="/website_form/" method="post" data-model_name="crm.lead"
                              data-success_page="/contactus-thank-you" class="s_website_form container-fluid"
                              enctype="multipart/form-data" data-editable-form="false">
                            <div class="justify-content-center row">
                                <div class="form-group form-field o_website_form_required_custom col-md-6">
                                    <input type="text" class="form-control o_website_form_input" name="contact_name"
                                           placeholder="Your Name" required="" value=""/>
                                </div>
                                <div class="form-group form-field col-md-6">
                                    <input type="text" class="form-control o_website_form_input" name="phone"
                                           placeholder="Phone Number" value=""/>
                                </div>
                                <div class="form-group form-field o_website_form_required_custom col-md-6">
                                    <input type="text" class="form-control o_website_form_input" name="email_from"
                                           required="" placeholder="Email" value=""/>
                                </div>
                                <div class="form-group form-field o_website_form_required_custom col-md-6">
                                    <input type="text" class="form-control o_website_form_input" name="partner_name"
                                           required="" placeholder="Your Company" value=""/>
                                </div>
                                <div class="form-group form-field o_website_form_required col-md-12">
                                    <input type="text" class="form-control o_website_form_input" name="name" required=""
                                           placeholder="Subject" value=""/>
                                </div>
                                <div class="form-group form-field o_website_form_required_custom col-md-12">
                                    <textarea class="form-control o_website_form_input" name="description" required=""
                                              placeholder="Your Question" rows="5"></textarea>
                                </div>
                                <div class="form-group col-12">
                                    <div class="s_btn text-left" data-name="Buttons">
                                        <a href="#" role="button"
                                           class="btn btn-primary btn-lg o_website_form_send o_default_snippet_text">Send Message
                                        </a>
                                        <span id="o_website_form_result"/>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>