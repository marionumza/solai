<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="counter_2" name="Counter 2">
        <section class="state_section pt64 pb64" id="state_section_id" data-visible="counters">
            <div class="container">
                <div class="row text-center justify-content-sm-center no-gutters state_text">
                    <div class="col-12 pb48 text-center">
                        <h2>Counter Design</h2>
                        <p>Lorem Ipsum is simply dummy text of the printing.</p>
                    </div>
