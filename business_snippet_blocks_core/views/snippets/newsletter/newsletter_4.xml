<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <template name="Newsletter 4" id="newsletter_4">
        <section class="pt80 pb80" id="newsletter_4" data-visible="newsletter">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-6 py-4">
                        <h2 class="font-weight-bold mb32">Subscribe to our newsletter
                        </h2>
                        <p class="font-weight-bold">Lorem ipsum dolor sit amet,
                            consectetur adipisicing elit, sed do eiusmod tempor incid.
                        </p>
                        <div class="social_icon mt32">
                            <a class="icon_view icon_fb" t-att-href="res_company.social_facebook">
                                <i class="fa fa-facebook mx-1 "></i>
                            </a>
                            <a class="icon_view icon_tw" t-att-href="res_company.social_twitter">
                                <i class="fa fa-twitter mx-1"></i>
                            </a>
                            <a class="icon_view icon_insta" t-att-href="res_company.social_instagram">
                                <i class="fa fa-instagram mx-1"></i>
                            </a>
                            <a class="icon_view icon_youtube" t-att-href="res_company.social_youtube">
                                <i class="fa fa-youtube-play mx-1"></i>
                            </a>
                            <a class="icon_view icon_ln" t-att-href="res_company.social_linkedin">
                                <i class="fa fa-linkedin mx-1"></i>
                            </a>
                        </div>
                    </div>
                    <div class="col-12 col-sm-12 col-md-12 col-lg-6 py-4">
                        <div class="col-lg-11 offset-lg-1 col-md-12 p-0 input-group js_subscribe" data-list-id="0">
                            <input type="email" name="email" class="js_subscribe_email form-control"
                                   placeholder="your email..."/>
                            <span class="input-group-append">
                                <a role="button" href="#" class="btn btn-primary js_subscribe_btn">Subscribe</a>
                                <a role="button" href="#" class="btn btn-success js_subscribed_btn d-none"
                                   disabled="disabled">Thanks
                                </a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>