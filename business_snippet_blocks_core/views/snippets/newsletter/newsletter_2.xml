<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <template name="Newsletter 2" id="newsletter_2">
        <section class="pt64 pb64" id="newsletter_2" data-visible="newsletter">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 text-center">
                        <h1 class="font-weight-bold mb16">Subscribe Here
                        </h1>
                        <h5 class="elementor-heading-title elementor-size-default">Get all the updates for event &amp;
                            Make yourself ready.
                        </h5>
                        <div class="mt56 col-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="col-lg-6 col-md-8 mx-auto p-0 input-group js_subscribe" data-list-id="0">
                                <input type="email" name="email" class="js_subscribe_email form-control"
                                       placeholder="your email..."/>
