<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="banner_d3" name="Banner 3">
        <section
                class="s_cover parallax align-content-center align-items-center d-flex full-height s_parallax_is_fixed"
                data-scroll-background-ratio="1"
                style="background-image: none;" data-visible="banners">
            <span class="s_parallax_bg oe_img_bg oe_custom_bg"
                  style="background-image: url(&quot;/business_snippet_blocks_core/static/src/img/banner-imgs/banner_imgs-5.jpg&quot;); background-position: 50% 0px;"/>
            <div class="container">
                <div class="row s_nb_column_fixed">
                    <div class="col-lg-12 s_title" data-name="Title">
                        <h1 class="text-white"
                            style="font-size: 62px; text-align: center;">Catchy
                            Headline
                        </h1>
                    </div>
                    <div class="col-lg-12 s_text pt16 pb16" data-name="Text">
                        <p class="lead text-white" style="text-align: center;">
                            Write one or
                            two paragraphs describing your product, services or
                            a specific feature.
                            <br/>
                            To be successful your content needs to be useful to
                            your readers.
                        </p>
                    </div>
                    <div class="col-lg-12 text-center pt16 pb16"
                         data-name="Buttons">
                        <a href="/aboutus"
                           class="btn mb8 mt8 btn-delta o_default_snippet_text">
                            About us
                        </a>
                        <a href="/contactus"
                           class="btn mb8 mt8 btn-primary o_default_snippet_text">
                            Contact us
                        </a>
                    </div>
                </div>
            </div>
        </section>

    </template>
</odoo>